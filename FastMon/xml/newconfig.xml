<?xml version="1.0" ?>

<monitoring>

    <inputList group="GEM" name="GEM base">
	<variable name="condsummary">
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="condarrcallo">
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="condarrcalhi">
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="condarrtkr">
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="condarrcno">
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="condarrroi">
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="LivetimeLast">
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="ElapsedLast">
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="DeadZoneLast">
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="DiscardedLast">
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="PrescaledLast">
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="DiscardedDelta" reset="False">
	    <type>int</type>
            <shape>(2)</shape>
	</variable>
	<variable name="DeadZoneDelta" reset="False">
	    <type>int</type>
            <shape>(2)</shape>
	</variable>
	<variable name="LivetimeLast">
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="TkrTriggerTower" >
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="CalHiTriggerTower" >
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="CalLoTriggerTower" >
	    <type>int</type>
            <shape>(1)</shape>
	</variable>	
	<variable name="AcdGemROI_Tower" > <!-- This name is inconsistent with the others: require a change!-->
	    <type>int</type>
            <shape>(1)</shape>
	</variable>	
	<variable name="AcdGemVeto_AcdTile" > 
	    <type>int</type>
            <shape>(NUM_ACD_VETOES)</shape>
	</variable>	
	<variable name="AcdGemCNO_GARC" > 
	    <type>int</type>
            <shape>(1)</shape>
	</variable>				
    </inputList>
    

    <outputList group="GEM" name="GEM base">
        <TH1F name="CondSummaryWord_Histo1">
	    <expression><![CDATA[ condsummary ]]></expression>
	    <cut><![CDATA[  ]]></cut>
	    <xbins>51</xbins>
	    <xmin>-10.5</xmin>
	    <xmax>40.5</xmax>
	    <title>Distribution of CondSummary Word values</title>
	    <xlabel>consummary value</xlabel>
	    <ylabel>N</ylabel>
	    <caption>Distribution of CondSummary Word values</caption>
        </TH1F>
        <TH1F name="DiscardedDelta_Histo1">
	    <expression><![CDATA[ DiscardedDelta[0] ]]></expression>
	    <cut><![CDATA[ !(condsummary&32)  ]]></cut>
	    <xbins>31</xbins>
	    <xmin>-0.5</xmin>
	    <xmax>30.5</xmax>
	    <title>Number of GEM discarded events between two successive read out events</title>
	    <xlabel>Number Gem discarded events</xlabel>
	    <ylabel>N</ylabel>
	    <caption>Number of GEM discarded events between two successive read out events. Periodic triggers have been taken out.</caption>
        </TH1F>
        <TH1F name="DeadZoneDelta_Histo1">
	    <expression><![CDATA[ DeadZoneDelta[0] ]]></expression>
	    <cut><![CDATA[ !(condsummary&32) ]]></cut>
	    <xbins>31</xbins>
	    <xmin>-0.5</xmin>
	    <xmax>30.5</xmax>
	    <title>Number of GEM deadzone events between two successive read out events</title>
	    <xlabel>Number Gem deadzone events</xlabel>
	    <ylabel>N</ylabel>
	    <caption>Number of GEM deadzone events between two successive read out events. Periodic triggers have been taken out.</caption>
        </TH1F>
        <!--TH1F name="">
	    <expression><![CDATA[  ]]></expression>
	    <cut><![CDATA[  ]]></cut>
	    <xbins></xbins>
	    <xmin></xmin>
	    <xmax></xmax>
	    <title></title>
	    <xlabel></xlabel>
	    <ylabel></ylabel>
	    <caption></caption>
        </TH1F-->
    </outputList>
						
    <outputList group="GEM" name="GEM arrival times" enabled="True">				
        <TH1F name="CondArrTKRTrigger_Histo1">
	    <expression><![CDATA[ condarrtkr ]]></expression>
	    <cut><![CDATA[ !(condsummary&32) ]]></cut>
	    <xbins>41</xbins>
	    <xmin>-0.5</xmin>
	    <xmax>40.5</xmax>
	    <title>Distribution of Condition arrival TKR triggers</title>
	    <xlabel>Condition arrival times for TKR triggers (nomially 50 ns ticks)</xlabel>
	    <ylabel>N</ylabel>
	    <caption>Distribution of Condition arrival times for TKR triggers. Periodic triggers have been taken out.</caption>
        </TH1F>
        <TH1F name="CondArrCalLowTrigger_Histo1">
	    <expression><![CDATA[ condarrcallo ]]></expression>
	    <cut><![CDATA[ !(condsummary&32) ]]></cut>
	    <xbins>41</xbins>
	    <xmin>-0.5</xmin>
	    <xmax>40.5</xmax>
	    <title>Distribution of Condition arrival Cal-Low triggers</title>
	    <xlabel>Condition arrival times for Cal-Low triggers (nomially 50 ns ticks)</xlabel>
	    <ylabel>N</ylabel>
	    <caption>Distribution of Condition arrival times for Cal-Low triggers. Periodic triggers have been taken out.</caption>
        </TH1F>
        <TH1F name="CondArrCalHiTrigger_Histo1">
	    <expression><![CDATA[ condarrcalhi ]]></expression>
	    <cut><![CDATA[ !(condsummary&32) ]]></cut>
	    <xbins>41</xbins>
	    <xmin>-0.5</xmin>
	    <xmax>40.5</xmax>
	    <title>Distribution of Condition arrival Cal-Hi triggers</title>
	    <xlabel>Condition arrival times for Cal-Hi triggers (nomially 50 ns ticks)</xlabel>
	    <ylabel>N</ylabel>
	    <caption>Distribution of Condition arrival times for Cal-Hi triggers. Periodic triggers have been taken out.</caption>
        </TH1F>
        <TH1F name="CondArrCNOTrigger_Histo1">
	    <expression><![CDATA[ condarrcno ]]></expression>
	    <cut><![CDATA[ !(condsummary&32) ]]></cut>
	    <xbins>41</xbins>
	    <xmin>-0.5</xmin>
	    <xmax>40.5</xmax>
	    <title>Distribution of Condition arrival CNO triggers</title>
	    <xlabel>Condition arrival times for CNO triggers (nomially 50 ns ticks)</xlabel>
	    <ylabel>N</ylabel>
	    <caption>Distribution of Condition arrival times for CNO triggers. Periodic triggers have been taken out.</caption>
        </TH1F>
        <TH1F name="CondArrROITrigger_Histo1">
	    <expression><![CDATA[ condarrroi ]]></expression>
	    <cut><![CDATA[ !(condsummary&32) ]]></cut>
	    <xbins>41</xbins>
	    <xmin>-0.5</xmin>
	    <xmax>40.5</xmax>
	    <title>Distribution of Condition arrival ROI triggers</title>
	    <xlabel>Condition arrival times for ROI triggers (nomially 50 ns ticks)</xlabel>
	    <ylabel>N</ylabel>
	    <caption>Distribution of Condition arrival times for ROI triggers. Periodic triggers have been taken out.</caption>
        </TH1F>
    </outputList>				

    <outputList group="GEM" name="GEM trigger vectors" enabled="True">
        <CUSTOM type="gem_vector_map" name="TkrTrigger_Tower_Histo1" enabled="True">
	    <title>Number of tracker triggers per tower</title>
	    <xlabel>Tower number</xlabel>
	    <ylabel>N</ylabel>
			<cut><![CDATA[ (condsummary&30)>0 ]]></cut>	
	    <expression>TkrTriggerTower</expression>
        </CUSTOM>
        <CUSTOM type="gem_vector_map" name="CalHiTrigger_Tower_Histo1" enabled="True">
	    <title>Number of Cal HI triggers per tower</title>
	    <xlabel>Tower number</xlabel>
	    <ylabel>N</ylabel>
			<cut><![CDATA[ (condsummary&30)>0 ]]></cut>	
	    <expression>CalHiTriggerTower</expression>
        </CUSTOM>
        <CUSTOM type="gem_vector_map" name="CalLoTrigger_Tower_Histo1" enabled="True">
	    <title>Number of Cal LO triggers per tower</title>
	    <xlabel>Tower number</xlabel>
	    <ylabel>N</ylabel>
			<cut><![CDATA[ (condsummary&30)>0 ]]></cut>	
	    <expression>CalLoTriggerTower</expression>
        </CUSTOM>	
        <CUSTOM type="gem_vector_map" name="AcdGemROI_Tower_Histo1" enabled="True">
	    <title>Number of ACD ROI per tower</title>
			<caption>This bit is set if any of the tile in the ROI fired a veto. This bit is independent of if the Tower bit is set.</caption>
	    <xlabel>Tower number</xlabel>
	    <ylabel>N</ylabel>
			<cut><![CDATA[ (condsummary&30)>0 ]]></cut>	
	    <expression>AcdGemROI_Tower</expression>
        </CUSTOM>
        <CUSTOM type="AcdGemVeto_AcdTile" name="AcdGemVeto_AcdTile_Histo1" enabled="True">
	    <!--expression><![CDATA[ AcdGemVeto_AcdTile ]]></expression-->
	    <cut><![CDATA[ (condsummary&30)>0 ]]></cut>
	    <title>Number of Acd Gem vetoes by tile</title>
	    <xlabel>Acd Tile Number (coded in 128 entries)</xlabel>
	    <ylabel>N</ylabel>
	    <caption>Expect to see spikes at 15, 31, 47, 63. These are large tiles at the bottom of the sides of the ACD.</caption>
        </CUSTOM>
        <CUSTOM type="gem_acd_cable_map" name="AcdGemCNO_GARC_Histo1" enabled="True">
	    <expression><![CDATA[ AcdGemCNO_GARC ]]></expression>
	    <cut><![CDATA[ (condsummary&30)>0 ]]></cut>
	    <title>Number of Acd CNO by board</title>
	    <xlabel>Acd CARC Number</xlabel>
	    <ylabel>N</ylabel>
	    <caption>This bit is the OR of the CNO signal on a single board. 
			Because of the tile to boad mapping, a factor two variation 
			between boards is normal</caption>
        </CUSTOM>						
    </outputList>
		
    <!--
    CAL group.
    -->
    <inputList group="CAL" name="CAL base" enabled="True">
	<variable name="CalXHit_TowerCalLayer" enabled="True">
	    <type>int</type>
	    <shape>(NUM_TOWERS, NUM_CAL_LAYERS_PER_TOWER)</shape>
	</variable>
	<variable name="CalXHit_TowerCalLayerCalColumn" enabled="False">
	    <type>int</type>
	    <shape>(NUM_TOWERS, NUM_CAL_LAYERS_PER_TOWER, NUM_CAL_COLUMNS_PER_TOWER)</shape>
	</variable>
	<variable name="CalXHit_Tower" enabled="True">
	    <type>int</type>
	    <shape>(NUM_TOWERS)</shape>
	</variable>
	<variable name="CalXHit" enabled="True">
	    <type>int</type>
	    <shape>(1)</shape>
	</variable>
	<variable name="CalTowerCount" enabled="True">
	    <type>int</type>
	    <shape>(1)</shape>
	</variable>
    </inputList>
	    
    <outputList group="CAL" name="CAL base" enabled="True">
	
        <CUSTOM type="CalXHit_NHit_Counter_TowerCalLayer" name="CalXHit_NHit_Counter_TowerCalLayer_Histo2" enabled="True">
	    <title>Number of hits in a calorimeter layer defined by the coordinates tower,callayer. Periodic triggers are NOT taken into account</title>
	    <xlabel>Tower number</xlabel>
	    <ylabel>Cal-Layer</ylabel>
	    <drawoptions>colz</drawoptions>
	    <!--expression>CalXHit_TowerCalLayer</expression-->
	    <!--exclude>[0]</exclude-->
	    <cut><![CDATA[ (condsummary&30)>0 && (condsummary&32)==0]]></cut>	    
        </CUSTOM>

        <CUSTOM type="ZeroCalXHit_NHit_Counter_TowerCalLayer" name="ZeroCalXHit_NHit_Counter_TowerCalLayer_Histo2" enabled="True">
	    <title>Number of times there is ZERO hits in a calorimeter layer defined by the coordinates tower,callayer. Periodic triggers are NOT taken into account</title>
	    <xlabel>Tower number</xlabel>
	    <ylabel>Cal-Layer</ylabel>
	    <drawoptions>colz</drawoptions>
	    <!--expression>CalXHit_TowerCalLayer</expression-->
	    <!--exclude>[0]</exclude-->
	    <cut><![CDATA[ (condsummary&30)>0 && (condsummary&32)==0]]></cut>	    
        </CUSTOM>

        <TH1F name="CalX_NHit_Histo1" enabled="True" level="lat">
	    <title>Distribution of  Cal crystals hits  per event (all towers included)</title>
	    <xbins>201</xbins>
	    <xmin>-0.5</xmin>
	    <xmax>200.5</xmax>
	    <xlabel>Number of CalX_Hits</xlabel>
            <expression>CalXHit</expression>
	    <cut><![CDATA[ (condsummary&30)>0  ]]></cut>
        </TH1F>
	
        <TH1F name="CalX_NHit_Histo1_Tower" enabled="True" level="tower">
	    <title>Distribution of  Cal crystals hits per event in this tower</title>
	    <xbins>151</xbins>
	    <xmin>-0.5</xmin>
	    <xmax>150.5</xmax>
	    <ylog>True</ylog>
	    <xlabel>Number of CalX_Hits in this tower</xlabel>
            <expression>CalXHit_Tower</expression>
	    <cut><![CDATA[ (condsummary&30)>0  ]]></cut>
        </TH1F>
	
        <TH1F name="CalTower_NHit_Histo1" enabled="True" level="lat">
	    <title>Number of CAL modules hit</title>
	    <xbins>16</xbins>
	    <xmin>0</xmin>
	    <xmax>16</xmax>
	    <xlabel>Number of Cal Towers Hit</xlabel>
            <expression>CalTowerCount</expression>
        </TH1F>
	
        <!--CUSTOM type="cal_2d_map" name="cal_hitmap" enabled="True">
	    <title>Average number of logs hit per layer</title>
	    <xlabel>Layer</xlabel>
	    <ylabel>Tower</ylabel>
	    <drawoptions>colz</drawoptions>
	    <expression>cal_layer_log_count</expression>
	    <exclude>[0]</exclude>
        </CUSTOM-->

    </outputList>
    <!--
    TKR group.
    -->		
    <inputList group="TKR" name="TKR base" enabled="True">
	<variable name="TkrHitsTowerPlane" enabled="True">
	    <type>int</type>
	    <shape>(NUM_TOWERS, NUM_TKR_LAYERS_PER_TOWER)</shape>
	</variable>
	<variable name="TkrHits" enabled="True">
	    <type>int</type>
	    <shape>(1)</shape>
	</variable>
	<variable name="TkrHitsTower" enabled="True">
	    <type>int</type>
	    <shape>(NUM_TOWERS)</shape>
	</variable>
	<variable name="TkrHitsTowerPlaneEnd" enabled="True">
	    <type>int</type>
	    <shape>(NUM_TOWERS, NUM_TKR_LAYERS_PER_TOWER, 2)</shape>
	</variable>
	<variable name="tkr_layer_end_tot" enabled="False">
	    <type>int</type>
	    <shape>(NUM_TOWERS, NUM_TKR_LAYERS_PER_TOWER, 2)</shape>
	</variable>	
	<variable name="ToT_con0_TowerPlane" enabled="True">
	    <type>int</type>
	    <shape>(NUM_TOWERS, NUM_TKR_LAYERS_PER_TOWER)</shape>
	</variable>		
	<variable name="ToT_con1_TowerPlane" enabled="True">
	    <type>int</type>
	    <shape>(NUM_TOWERS, NUM_TKR_LAYERS_PER_TOWER)</shape>
	</variable>	
    </inputList>
		
    <outputList group="TKR" name="TKR base" enabled="True">
		
        <TH1F name="TkrHits_Histo1" enabled="True">
	    <title>Distribution of strip hits per event (all towers included)</title>
	    <xbins>300</xbins>
	    <xmin>0</xmin>
	    <xmax>3000</xmax>
	    <xlabel>Number of strip hits</xlabel>
	    <ylabel>N</ylabel>
			<cut><![CDATA[ (condsummary&30)>0 ]]></cut>
      <expression>TkrHits</expression>
        </TH1F>
				
        <CUSTOM type="TkrTwrVsPlaneVariableCounter" name="ZeroTkrHitsCounter_TowerPlane_Histo2" enabled="False">
	    <title>Counter of ZERO strip hits vs Tower and Tracker plane</title>
			<caption>Number of times there are no strip hits in a Tracker plane</caption>
	    <xlabel>Tracker plane</xlabel>
	    <ylabel>Tower</ylabel>
	    <drawoptions>colz</drawoptions>
	    <expression>TkrHitsTowerPlane</expression>
            <cut><![CDATA[ TkrHitsTowerPlane ==0 && (condsummary&30)>0]]></cut>
        </CUSTOM>					
				
        <CUSTOM type="TkrTwrVsPlaneVariableSumwx" name="TkrHitsCounter_TowerPlane_Histo2" enabled="False">
	    <title>Number of strip hits vs Tower and Tracker plane</title>
			<caption>Test</caption>
	    <xlabel>Tracker plane</xlabel>
	    <ylabel>Tower</ylabel>
	    <drawoptions>colz</drawoptions>
	    <expression>TkrHitsTowerPlane</expression>
            <cut><![CDATA[ TkrHitsTowerPlane >0 && (condsummary&30)>0]]></cut>
        </CUSTOM>		
				
    </outputList>
		
    <outputList group="TKR" name="TKR Details - Strip hits per tower" enabled="True">						
        <TH1F name="TkrHits_Histo1_Tower" enabled="True" level="tower">
	    <title>Distribution of strip hits per tower</title>
	    <xbins>200</xbins>
	    <xmin>0</xmin>
	    <xmax>1000</xmax>
	    <xlabel>Number of strip hits</xlabel>
	    <ylabel>N</ylabel>
			<cut><![CDATA[ (condsummary&30)>0 ]]></cut>
            <expression>TkrHitsTower</expression>
        </TH1F>				
    </outputList>

    <outputList group="TKR" name="TKR Details - Planes hit in a tower" enabled="True">		
        <CUSTOM type="TkrPlanesHit" name="TkrPlanesHit_Histo1_Tower" enabled="True" level="tower" >
	    <title>Distribution of the number of planes hit in a tower</title>
	    <xlabel>Layer number</xlabel>
	    <caption></caption>
	    <!-- this tag is useless for this CUSTOM plot 
			since it is dedicated to a specific task
			<expression></expression> -->
			<cut><![CDATA[ (condsummary&30)>0 ]]></cut>
        </CUSTOM>			
    </outputList>				

    <outputList group="TKR" name="TKR Details - ToT" enabled="True">		
        <CUSTOM type="ToT_0_WhenTkrHitsExist_TowerPlane" name="ToT_0_WhenTkrHitsExist_TowerPlane_Histo2" enabled="True">
	    <title>Number of times that, existing at least one hit, ToT==0 in both controllers</title>
			<xlabel>Tower Number</xlabel>
	    <ylabel>Tracker plane</ylabel>
			<drawoptions>colz</drawoptions>
	    <!--caption>Number of times that the TOT is 0 while there are 1 or more strips hit in the same controller</caption-->
	    <!-- this tag is useless for this CUSTOM plot 
			since it is dedicated to a specific task
			<expression></expression> -->
			<cut><![CDATA[ (condsummary&30)>0 ]]></cut>
        </CUSTOM>	
				
    </outputList>
		
		<!--
    ACD group.
    -->		
		
    <inputList group="ACD" name="ACD1" enabled="True">
	<variable name="acd_tile_count" enabled="True">
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="acd_tile_hitmap" enabled="False">
	    <type>int</type>
            <shape>(1)</shape>
	</variable>
	<variable name="acd_cable_tile_count" enabled="True">
	    <type>int</type>
            <shape>(NUM_ACD_CABLES)</shape>
	</variable>
    </inputList>		
		
    <outputList group="ACD" name="ACD base" enabled="True">

        <TH1F name="AcdDigis_Histo1" enabled="True" level="lat">
	    <title>Distribution of ACD tiles hit per event</title>
	    <xbins>111</xbins>
	    <xmin>-0.5</xmin>
	    <xmax>110</xmax>
	    <xlabel>N</xlabel>
	    <ylabel>Number of ACD tile hits</ylabel>
      <expression>acd_tile_count</expression>
			<cut><![CDATA[ (condsummary&30)>0 ]]></cut>
        </TH1F>

    </outputList>
		
    <!--
    Meta event group.
    -->
    <outputList group="META" name="Meta event base" enabled="True">
        <TH1F name="meta_context_open_crate" enabled="True">
	    <title>Crate number</title>
	    <xbins>10</xbins>
	    <xmin>0</xmin>
	    <xmax>10</xmax>
	    <xlabel>Crate number (EPU0, EPU1, EPU2, SIU0, SIU1, AUX)</xlabel>
	    <ylabel>Number of events</ylabel>
            <expression>meta_context_open_crate</expression>
        </TH1F>
    </outputList>    
		
</monitoring>
